[Desktop Entry]
Name=Guardian Games
GenericName=Game Launcher
Comment=Safe gaming launcher with parental controls
Exec=/opt/guardian-games/guardian-games-launcher %U
Icon=guardian-games
Terminal=false
Type=Application
Categories=Game;
Keywords=games;gaming;launcher;steam;epic;
StartupNotify=true
StartupWMClass=guardian-games

# GNOME specific
X-GNOME-UsesNotifications=true
X-GNOME-Autostart-enabled=true

# Kiosk mode - this is the only app for restricted children
X-Guardian-Kiosk-App=true

# Desktop actions
Actions=library;friends;settings;

[Desktop Action library]
Name=Game Library
Exec=/opt/guardian-games/guardian-games-launcher --page=library

[Desktop Action friends]
Name=Friends
Exec=/opt/guardian-games/guardian-games-launcher --page=friends

[Desktop Action settings]
Name=Settings
Exec=/opt/guardian-games/guardian-games-launcher --page=settings
